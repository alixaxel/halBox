server {
	listen 80;
	listen 443 ssl;
	server_name default;
	ssl_certificate /etc/nginx/certificates/halBox.crt;
	ssl_certificate_key /etc/nginx/certificates/halBox.key;
	
	root /var/www/default/html;
	index index.html index.php;
	autoindex on;

	location / {
		try_files $uri $uri/ /index.php;
	}
	
	location ~ /(?:favicon[.]ico|robots[.]txt)$ {
		log_not_found off;
	}

	location ~* [.]((?:c|le)ss|eot|gif|html?|ico|jpe?g|js|png|svg|swf|ttf|txt|woff)$ {
		access_log off;
		expires max;
	}

	location ~* [.]php$ {
		try_files $uri =404;
		include fastcgi_params;
		fastcgi_pass unix:/var/run/php5-fpm.sock;
		fastcgi_index index.php;
	}

	location ~* [.]ht {
		deny all;
	}
}
